alias gc='git commit -am'
alias gp='git pull'
alias gpo='git pull origin'
alias gpuo='git push origin'
alias gu='git reset --hard HEAD~1'
alias idgaf='git checkout -b idgaf; git add *; git commit -am idgaf; git checkout dev; git branch -D idgaf'
# alias pu='git push origin $(git symbolic-ref HEAD | sed "s!refs\/heads\/!!")'
alias u='git commit -am update'

# **********************************
# Aliases for Scripts
# **********************************

alias cl='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/cl-script'
alias ge='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/ge-script'
alias gr='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/gr-script'
alias newscript='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/newscript-script'
alias out='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/out-script'
alias zipall='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/zipall-script'
alias unzipy='~/Documents/Git/ProgrammingEnvironments/LinuxScripts/unzipy-script'

# **********************************
# Require Change
# **********************************

alias aly="gedit /usr/scripts/aliases --new-window & disown"
alias ks='gedit ~/Documents/Git/ProgrammingEnvironments/LinuxKeyboardShortcuts --new-window & disown'
alias doc="cd ~/Documents/"
alias gity="cd ~/Documents/Git"
alias scr="cd ~/Documents/Git/ProgrammingEnvironments/LinuxScripts/; ls"
alias newmake='cp ~/Documents/Git/ProgrammingEnvironments/LinuxScripts/Makefile .; vi Makefile'


